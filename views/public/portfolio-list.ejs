<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold">Our Portfolio</h1>
                <p class="lead text-muted">Explore our completed projects</p>
            </div>
        </div>
        <div class="row g-4">
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <% if (post.mediaIds && post.mediaIds.length > 0) { %>
                                <img src="/admin/media/image/<%= post.mediaIds[0]._id %>/medium" class="card-img-top" alt="<%= post.title %>" style="height: 250px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <% if (post.location) { %>
                                    <p class="text-muted small"><i class="bi bi-geo-alt"></i> <%= post.location %></p>
                                <% } %>
                                <p class="card-text"><%= post.excerpt || post.content.substring(0, 150) + '...' %></p>
                                <a href="/portfolio/<%= post.slug %>" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center text-muted py-5">
                    <p class="lead">No portfolio posts available yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

