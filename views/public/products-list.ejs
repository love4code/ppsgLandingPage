<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold">Our Products</h1>
                <p class="lead text-muted">Browse our product catalog</p>
            </div>
        </div>
        <div class="row g-4">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <% if (product.mediaIds && product.mediaIds.length > 0) { %>
                                <img src="/admin/media/image/<%= product.mediaIds[0]._id %>/medium" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.shortDescription || product.description.substring(0, 150) + '...' %></p>
                                <% if (product.price) { %>
                                    <p class="text-primary fw-bold fs-5">$<%= product.price.toLocaleString() %></p>
                                <% } %>
                                <a href="/products/<%= product.slug %>" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center text-muted py-5">
                    <p class="lead">No products available yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

