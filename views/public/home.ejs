<% if (settings.hero && settings.hero.useImage && settings.hero.heroMediaId) { %>
    <section class="hero-image-section" style="background-image: url('/admin/media/image/<%= settings.hero.heroMediaId %>/large'); background-size: cover; background-position: center; min-height: 500px; position: relative;">
        <div class="hero-overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center;">
            <div class="container text-center text-white">
                <% if (settings.hero.headline) { %>
                    <h1 class="display-4 fw-bold mb-3"><%= settings.hero.headline %></h1>
                <% } %>
                <% if (settings.hero.subheadline) { %>
                    <p class="lead mb-4"><%= settings.hero.subheadline %></p>
                <% } %>
                <% if (settings.hero.ctaText && settings.hero.ctaLink) { %>
                    <a href="<%= settings.hero.ctaLink %>" class="btn btn-primary btn-lg"><%= settings.hero.ctaText %></a>
                <% } %>
            </div>
        </div>
    </section>
<% } else { %>
    <section class="hero-section bg-primary text-white py-5">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">
                <%= settings.hero && settings.hero.headline ? settings.hero.headline : 'Welcome to ' + settings.companyName %>
            </h1>
            <p class="lead mb-4">
                <%= settings.hero && settings.hero.subheadline ? settings.hero.subheadline : 'Your trusted partner for premium pool and spa solutions' %>
            </p>
            <% if (settings.hero && settings.hero.ctaText && settings.hero.ctaLink) { %>
                <a href="<%= settings.hero.ctaLink %>" class="btn btn-light btn-lg"><%= settings.hero.ctaText %></a>
            <% } else { %>
                <a href="/contact" class="btn btn-light btn-lg">Get Started</a>
            <% } %>
        </div>
    </section>
<% } %>

<!-- Portfolio Preview -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold">Our Portfolio</h2>
                <p class="text-muted">See our latest projects</p>
            </div>
        </div>
        <div class="row g-4">
            <% if (portfolioPosts && portfolioPosts.length > 0) { %>
                <% portfolioPosts.forEach(post => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <% if (post.mediaIds && post.mediaIds.length > 0) { %>
                                <img src="/admin/media/image/<%= post.mediaIds[0]._id %>/medium" class="card-img-top" alt="<%= post.title %>" style="height: 250px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <p class="card-text"><%= post.excerpt || post.content.substring(0, 100) + '...' %></p>
                                <a href="/portfolio/<%= post.slug %>" class="btn btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center text-muted">
                    <p>No portfolio posts yet.</p>
                </div>
            <% } %>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/portfolio" class="btn btn-primary">View All Portfolio</a>
            </div>
        </div>
    </div>
</section>

<!-- Products Preview -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="display-5 fw-bold">Our Products</h2>
                <p class="text-muted">Explore our product offerings</p>
            </div>
        </div>
        <div class="row g-4">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <% if (product.mediaIds && product.mediaIds.length > 0) { %>
                                <img src="/admin/media/image/<%= product.mediaIds[0]._id %>/medium" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.shortDescription || product.description.substring(0, 100) + '...' %></p>
                                <% if (product.price) { %>
                                    <p class="text-primary fw-bold">$<%= product.price.toLocaleString() %></p>
                                <% } %>
                                <a href="/products/<%= product.slug %>" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center text-muted">
                    <p>No products yet.</p>
                </div>
            <% } %>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/products" class="btn btn-primary">View All Products</a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Get In Touch</h2>
                        <% if (typeof contactSuccess !== 'undefined' && contactSuccess) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                Thank you for your message! We'll get back to you soon.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>
                        <form method="POST" action="/contact" id="contactForm">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name *</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="mb-3">
                                <label for="town" class="form-label">Town/City *</label>
                                <input type="text" class="form-control" id="town" name="town" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message *</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

